#add-appointment-form.modal.fade(aria-hidden=true aria-labelledby="Signup" role="dialog" tabindex="-1")
  .modal-dialog
    .modal-content
      .modal-header
        %h4.modal-title {{ "APPOINTMENT.ADD_AN_APPOINTMENT" | translate }}
      .modal-body(ng-controller="CreateAppointmentsController")
        %form(ng-init="appointment = {}" ng-submit="addAppointment()" role="form")
          .form-group
            %label {{ "APPOINTMENT.DATE" | translate }}
            %input#date.form-control(name="date" ng-model="appointment.date" required="required" type="text" pick-a-date="date" pick-a-date-options="pickADateOptions")
          .form-group
            %label {{ "APPOINTMENT.START_TIME" | translate }}
            %input#start-time.form-control(name="time" ng-model="appointment.time" required="required" type="text" pick-a-time="time" pick-a-time-options="pickATimeOptions")
          .form-group
            %label {{ "APPOINTMENT.DURATION" | translate }}
            %select#duration.form-control(name="duration" ng-model="appointment.duration" ng-options="duration.value as duration.text for duration in durations" required="required" chosen)
          .form-group
            %label {{ "APPOINTMENT.MASSEUR" | translate }}
            %select#masseur.form-control(name="masseur_id" ng-model="appointment.masseur_id" ng-options="masseur.id as masseur.name for masseur in masseurs" required="required" chosen)
          .form-group
            %label {{ "APPOINTMENT.CUSTOMER" | translate }}
            %select#customer.form-control(name="customer_id" ng-model="appointment.customer_id" ng-options ="customer.id as customer.name for customer in customers" required="required" chosen)
          %button.btn.btn-primary.btn-lg(type="submit") {{ "ADD" | translate }}
