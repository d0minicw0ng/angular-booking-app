%div(ng-controller="PasswordController")
  .page-header
    %h1 {{ "ACCOUNT.CHANGE_PASSWORD" | translate }}

  .row
    %form#edit-password-form(ng-init="passwordForm = {}" ng-submit="updatePassword()" role="form")
      .form-group
        %label {{ "USER.PASSWORD" | translate }}
        %input.form-control(name="password" ng-model="passwordForm.password" required="required" type="password")
      .form-group
        %label {{ "USER.PASSWORD_CONFIRMATION" | translate }}
        %input.form-control(name="password_confirmation" ng-model="passwordForm.password_confirmation" required="required" type="password")
      %button.btn.btn-primary.btn-lg(type="submit") {{ "UPDATE" | translate }}


