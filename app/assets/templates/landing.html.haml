#login-form.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "Login", :role => "dialog", :tabindex => "-1"}
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—
          %span.sr-only Close
        %h4#login-form.modal-title Login
      .modal-body(ng-controller="SessionsController")
        %form{"ng-init" => "loginForm = {}", "ng-submit" => "submitLogin(loginForm)", :role => "form"}
          .form-group
            %label email
            %input.form-control{:name => "email", "ng-model" => "loginForm.email", :required => "required", :type => "email"}
          .form-group
            %label password
            %input.form-control{:name => "password", "ng-model" => "loginForm.password", :required => "required", :type => "password"}
          %button.btn.btn-primary.btn-lg{:type => "submit"} Sign in

      .modal-footer
        %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} Close
        %button.btn.btn-primary{:type => "button"} Save changes

%button.btn.btn-primary.btn-lg{"data-target" => "#login-form", "data-toggle" => "modal", :type => "button"}
  Login
